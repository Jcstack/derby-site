/* Documentation sidebar */
.sidebar {
  background: derbyGranite;
  height: 100%;
  padding-top: 40px
  padding-left: 0;
  padding-right: 0;
  line-height: 1.2em;
  //overflow-y: scroll;
}

basePadding = 30px;
.list-group-item {
  font-size: 14px;
  //padding: 8px 0px;
  padding: 4px 0;
  padding-left: basePadding;
  border: none;
  font-family: 'Roboto', sans-serif;
  background: derbyGranite;

  // taken from bootstrap
  display: block
  position: relative
  margin-bottom: -1
}
.list-group-item:first-child, .list-group-item:last-child {
  border-radius: 0;
}
.list-group-item.level-0, .list-group-item.level-1 {
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 600;
  padding-top: 15px
  text-transform: upperCase;
}
.list-group-item.level-2 {
  padding-left: 24px + basePadding;
}
.list-group-item.level-3 {
  padding-left: 36px + basePadding;
}
a.list-group-item.active {
  color: derbyTealDark;
  background: derbyGranite;
}
a.list-group-item:hover {
  color: derbyTeal;
  background: derbyGranite;
}
a.list-group-item.active:hover {
  color: derbyTealDark;
  background: derbyGranite;
}

