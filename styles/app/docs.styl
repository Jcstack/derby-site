.main
  padding-left: 40px

  a {
    color: derbyBlack;
    position: relative;
    display: inline-block;
    vertical-align: top;
    text-decoration: none
    z-index: 2
  }

  a:before
    content:'';
    position:absolute;
    left:0;
    right:0;
    bottom:1px;
    border-bottom:solid 4px derbyTealLight;
    z-index: -1

  a:hover:before
    content:'';
    position:absolute;
    left:0;
    right:0;
    bottom:1px;
    border-bottom:solid 4px derbyTeal;
    z-index: -1


  blockquote
    a:before
      content:'';
      position:absolute;
      left:0;
      right:0;
      bottom:1px;
      border-bottom:solid 4px derbyTeal;
      z-index: -1

    a:hover:before
      content:'';
      position:absolute;
      left:0;
      right:0;
      bottom:1px;
      border-bottom:solid 4px derbyTealDark;
      z-index: -1

 

  h1.heading {
    font-size: 48px;
  }
  h2.heading {
    font-size: 32px;
  }
  
  .heading
    font-weight: 600
    margin-top: 40px
    // compensate for the anchor icons
    a.header-link
      visibility: hidden
      margin-left: -25px
      padding-right: 5px
      svg.icon
        margin-top: -5px
    &:hover
      .header-link
        visibility: visible


  // add the anchor link
  a.anchor
    display: block
    position: relative
    top: -48px
    height: 0px
    visibility: hidden

  img
    max-width: 100%

  .docs-thumbs img {
    display: inline-block;
  }