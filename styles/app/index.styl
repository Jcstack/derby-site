.footer
  width: 100%
  background-color: #f5f5f5

  .bs-docs-social
    margin: 10px
    text-align: center





.scrollable {
  overflow-x: hidden;
  overflow-y: auto;
}
.wrapper {
  padding: 15px;
}



::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}
::-webkit-scrollbar-thumb {
  background-color: rgba(50, 50, 50, 0.25);
  border: 2px solid transparent;
  border-radius: 10px;
  background-clip: padding-box;
}
::-webkit-scrollbar-thumb:hover {
  background-color: rgba(50, 50, 50, 0.5);
}
::-webkit-scrollbar-track {
  background-color: rgba(50, 50, 50, 0.05);
}


/* Overrides */
code
  color: derbyBlack
  background: derbyBrick
  border-radius: 2px

blockquote
  border-color: derbyTealLight
  font-size: 1em
  background: derbyTealLighter
  code
    color: #333
    font-weight: bold
    background: transparent

