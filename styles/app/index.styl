// ------------

.bs-docs-home
  position:absolute
  top: headerHeight
  bottom: footerHeight
  width: 100%
  //height: 100%
  //min-height: 100%

.navbar-static-top
  position:fixed
  height: headerHeight
  top: 0
  right: 0
  left: 0

/////
.navbar
  min-height: 60px

.navbar-header
  margin-left:0
  margin-right:0

.navbar-static-top
  color: white;
  background: derbyTeal;
  z-index: 1030 // not sure why this has to be...
  .container
    padding: 0

.navbar-header
  width: brandWidth;
  background-color: derbyGranite;
  min-height: 60px
  .navbar-brand
    padding: 0px 0 0 10px
    img
      margin-top: 7px

// The navigation links at the top
.navbar-collapse
  position: absolute
  top: 0
  bottom: 0
  left: brandWidth

.navbar-nav
  float:left
  margin: 0
  padding-left: 25px
  li
    //
    float:left
    position:relative
    display:block
    list-style: none
    //
    &.active
      a
        color: derbySand
    a
      display: block
      padding: 20px 15px
      line-height: 20px
      text-decoration: none
      height: 20px
      font-weight: 600
      color: derbySeaweed
      &:hover
        background-color: derbyAlgae;

.header-container
  position:relative
  //max-width: 1100px
  width: 100%
  margin: 0 auto
  height: headerHeight

.container
  position:relative
  max-width: 1100px
  margin: 0 auto
  min-height: 100%
  
.sidebar
  position: absolute
  overflow: auto
  width: sidebarWidth
  top: 0
  bottom: 0

